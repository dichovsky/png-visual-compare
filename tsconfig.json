{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "lib": [
      "ES2024"
    ],
    "allowJs": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "types": ["node"],
    "outDir": "./out",
  },
  "include": [
    "./src/**/*"
  ]
}