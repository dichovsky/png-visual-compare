{
  "name": "png-visual-compare",
  "version": "0.3.0",
  "description": "Node.js utility to compare PNG files",
  "keywords": [
    "visual testing",
    "compare png",
    "compare images",
    "png",
    "image diff",
    "diff"
  ],
  "homepage": "https://github.com/dichovsky/png-visual-compare#readme",
  "bugs": {
    "url": "https://github.com/dichovsky/png-visual-compare/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dichovsky/png-visual-compare.git"
  },
  "license": "MIT",
  "author": "Igor Magdich",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean": "rimraf ./dist ./coverage ./test-results",
    "prepublish": "npm run clean && npm run lint && npm run test && npm run tsc",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "tsc": "tsc --pretty",
    "pretest": "npm run clean",
    "test": "jest",
    "test:docker": "npm run docker:build && npm run docker:run",
    "license-checker": "npx license-checker --production --onlyAllow 'MIT; MIT OR X11; BSD; ISC; Apache-2.0; Unlicense'",
    "docker:build": "docker build --compress -t test-png-visual-compare .",
    "predocker:run": "npm run clean",
    "docker:run": "docker run --rm -it -v $PWD/test-results:/usr/e2e/test-results test-png-visual-compare",
    "docker:test": "jest"
  },
  "dependencies": {
    "pixelmatch": "5.2.1",
    "pngjs": "6.0.0"
  },
  "devDependencies": {
    "@types/jest": "27.0.2",
    "@types/node": "16.10.3",
    "@types/pixelmatch": "5.2.4",
    "@types/pngjs": "6.0.1",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "eslint": "7.32.0",
    "jest": "27.2.5",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.4.3"
  }
}
